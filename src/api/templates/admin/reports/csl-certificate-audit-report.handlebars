<div>
  <img
    src="http://localhost:{{API_PORT}}/yukon-logo.png"
    style="height: 80px; width: 160px; float: left; margin-top: -12px"
  />
  <div class="header" style="text-align: right; font-size: .9rem">
    GOVERNMENT OF YUKON, DEPARTMENT OF EDUCATION
    <br />
    STUDENT FINANCIAL ASSISTANCE
    <div class="mt-2" style="font-size: 1.3rem">
      CSL Certificate Audit Report<br> <small>Academic Year: {{ academic_year}}</small>
    </div>
    <hr style="border-color: black; border-bottom: 0;  margin-bottom: 10px; margin-top: 15px" />
  </div>
  Report run on:
  {{momentDateFormat currentDate "YYYY-MM-DD h:mm a" false}}

  <div class="mt-4" style="font-size: 1.2rem">
    Certificates Not Yet Sent
  </div>

  <table class="table mt-2" cellpadding="0" cellspacing="0" style="width: 100%">
    <thead>
      <tr style="border-bottom: 1px black solid">
        <th style="border-bottom: 1px black solid">Cert Num</th>
        <th style="border-bottom: 1px black solid">MSFAA Num</th>
        <th style="border-bottom: 1px black solid">MSFAA Rec'd</th>
        <th style="border-bottom: 1px black solid">Name</th>
        <th style="border-bottom: 1px black solid">Request Type</th>
        <th style="border-bottom: 1px black solid">Issue Date</th>
        <th style="border-bottom: 1px black solid">Due Date</th>
        <th style="text-align:right; border-bottom: 1px black solid">Amount</th>
        <th style="border-bottom: 1px black solid">Seq</th>
      </tr>
    </thead>

    <tbody>
      {{#each notSent}}
        <tr>
          <td>{{this.cert_num}}</td>
          <td>{{this.msfaa_num}}</td>
          <td>{{momentDateFormatDefault this.received_date "YYYY-MM-DD" ""}}</td>
          <td>{{this.name}}</td>
          <td>{{this.request_type}}</td>
          <td>{{momentDateFormatDefault this.issue_date "YYYY-MM-DD" ""}}</td>
          <td>{{momentDateFormatDefault this.due_date "YYYY-MM-DD" ""}}</td>
          <td style="text-align:right">{{centsToDollarString this.amount}}</td>
          <td>{{this.seq}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <div style="font-size: 1.2rem; margin-top: 30px">
    Certificates Sent
  </div>

  <table class="table mt-2" cellpadding="0" cellspacing="0" style="width: 100%">
    <thead>
      <tr style="border-bottom: 1px black solid">
        <th style="border-bottom: 1px black solid">Cert Num</th>
        <th style="border-bottom: 1px black solid">MSFAA Num</th>
        <th style="border-bottom: 1px black solid">MSFAA Rec'd</th>
        <th style="border-bottom: 1px black solid">Name</th>
        <th style="border-bottom: 1px black solid">Request Type</th>
        <th style="border-bottom: 1px black solid">Issue Date</th>
        <th style="border-bottom: 1px black solid">Due Date</th>
        <th style="text-align:right; border-bottom: 1px black solid">Amount</th>
        <th style="border-bottom: 1px black solid">Seq</th>
      </tr>
    </thead>

    <tbody>
      {{#each sent}}
        <tr>
          <td>{{this.cert_num}}</td>
          <td>{{this.msfaa_num}}</td>
          <td>{{momentDateFormatDefault this.received_date "YYYY-MM-DD" ""}}</td>
          <td>{{this.name}}</td>
          <td>{{this.request_type}}</td>
          <td>{{momentDateFormatDefault this.issue_date "YYYY-MM-DD" ""}}</td>
          <td>{{momentDateFormatDefault this.due_date "YYYY-MM-DD" ""}}</td>
          <td style="text-align:right">{{centsToDollarString this.amount}}</td>
          <td>{{this.seq}}</td>
        </tr>
      {{/each}}
    </tbody>

  </table>

  {{!-- <p class="date">{{momentDateFormat currentDate "DD MMM YYYY"}}</p> --}}

</div>